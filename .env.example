# =============================================================
# HIS/RIS Sistema Hospitalario + RIS - Environment Variables
# Copy to .env and fill in values
# =============================================================

# --- App ---
APP_NAME="HIS/RIS Sistema Hospitalario"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=change-me-in-production-32chars-min

# --- JWT RS256 Keys (generate with: openssl genrsa -out private_key.pem 2048) ---
# Paste content as single line with \n for newlines, OR use file paths
JWT_PRIVATE_KEY_PATH=./private_key.pem
JWT_PUBLIC_KEY_PATH=./public_key.pem
JWT_ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Database ---
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=his_ris
POSTGRES_USER=his_ris_user
POSTGRES_PASSWORD=his_ris_password
DATABASE_URL=postgresql+asyncpg://his_ris_user:his_ris_password@postgres:5432/his_ris

# --- Redis / Celery ---
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# --- Orthanc ---
ORTHANC_URL=http://orthanc:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=orthanc
ORTHANC_DICOM_PORT=4242
ORTHANC_AE_TITLE=ORTHANC

# --- DICOM Worklist ---
WORKLIST_DIR=/var/lib/orthanc/worklists
INSTITUTION_NAME="Hospital General"
INSTITUTION_AE_TITLE=HIS_RIS_SCP

# --- HL7 ---
HL7_LISTENER_HOST=0.0.0.0
HL7_LISTENER_PORT=2575
HL7_SENDING_FACILITY=HIS_RIS
HL7_RECEIVING_FACILITY=PACS

# --- CORS ---
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# --- Frontend ---
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_ORTHANC_URL=http://localhost:8042
